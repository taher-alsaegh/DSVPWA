name: image-security-scans

on:
  workflow_run:
    workflows: ["CI (Lint) + Build & Push to GHCR"]
    types: [completed]
  workflow_dispatch: {}

permissions:
  contents: read
  packages: read
  security-events: write

jobs:
  scan-ghcr-image:
    if: >
      ${{
        github.event.workflow_run.conclusion == 'success' &&
        github.event.workflow_run.head_branch == 'dev'
      }}
    runs-on: ubuntu-latest

    steps:
      - name: Compute image ref from workflow_run
        id: vars
        shell: bash
        run: |
          REPO="${{ github.event.workflow_run.head_repository.full_name }}"
          REPO_LC="$(echo "$REPO" | tr '[:upper:]' '[:lower:]')"
          SHA="${{ github.event.workflow_run.head_sha }}"
          SHORT_SHA="${SHA:0:7}"
          BRANCH="${{ github.event.workflow_run.head_branch }}"

          # Branch build tags: dev + dev-<shortsha>
          if [ "$BRANCH" = "dev" ]; then
            echo "image_ref=ghcr.io/${REPO_LC}:dev-${SHORT_SHA}" >> "$GITHUB_OUTPUT"
          else
            # Fallback: try sha-<shortsha> (exists on your release build)
            echo "image_ref=ghcr.io/${REPO_LC}:sha-${SHORT_SHA}" >> "$GITHUB_OUTPUT"
          fi

      - name: Login to GHCR
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Pull image
        run: docker pull "${{ steps.vars.outputs.image_ref }}"

      # Trivy Image scan
      - name: Trivy image scan (SARIF)
        continue-on-error: true
        uses: aquasecurity/trivy-action@master
        with:
          image-ref: ${{ steps.vars.outputs.image_ref }}
          format: sarif
          output: trivy-image.sarif

      - name: Upload Trivy SARIF
        uses: github/codeql-action/upload-sarif@v3
        with:
          sarif_file: trivy-image.sarif
          category: trivy-image

      # Snyk Container scan
      - name: Snyk container test (SARIF)
        continue-on-error: true
        uses: snyk/actions/docker@master
        env:
          SNYK_TOKEN: ${{ secrets.SNYK_TOKEN }}
        with:
          image: ${{ steps.vars.outputs.image_ref }}
          args: --sarif-file-output=snyk-image.sarif

      - name: Upload Snyk SARIF
        uses: github/codeql-action/upload-sarif@v3
        with:
          sarif_file: snyk-image.sarif
          category: snyk-image
